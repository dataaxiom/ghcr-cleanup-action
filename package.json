{
  "name": "ghcr-cleanup-action",
  "description": "GitHub Container Registry Cleanup Action",
  "version": "main",
  "author": "Dataaxiom Inc",
  "homepage": "https://github.com/dataaxiom/ghcr-cleanup-action",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dataaxiom/ghcr-cleanup-action.git"
  },
  "bugs": {
    "url": "https://github.com/dataaxiom/ghcr-cleanup-action/issues"
  },
  "keywords": [
    "ci",
    "ghcr.io"
  ],
  "exports": {
    ".": "./dist/index.js"
  },
  "engines": {
    "node": ">=20"
  },
  "type": "module",
  "scripts": {
    "bundle": "npm run format:write && npm run package && npm run ci-tester",
    "ci-test": "npx jest --passWithNoTests",
    "coverage": "npx make-coverage-badge --output-path ./badges/coverage.svg",
    "format:write": "npx prettier --write .",
    "format:check": "npx prettier --check .",
    "lint": "npx eslint . -c ./.github/linters/.eslintrc.yml",
    "package": "npx ncc build src/index.ts -o dist --source-map --license licenses.txt",
    "ci-tester": "npx ncc build src/ci-tester.ts -o citester --source-map",
    "package:watch": "npm run package -- --watch",
    "test": "npx jest",
    "all": "npm run format:write && npm run lint && npm run test && npm run coverage && npm run package"
  },
  "license": "BSD-3-Clause",
  "jest": {
    "preset": "ts-jest",
    "verbose": true,
    "clearMocks": true,
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "testMatch": [
      "**/*.test.ts"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "coverageReporters": [
      "json-summary",
      "text",
      "lcov"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "./src/**"
    ]
  },
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@octokit/plugin-request-log": "^5.3.1",
    "@octokit/plugin-retry": "^7.1.2",
    "@octokit/plugin-throttling": "^9.4.0",
    "@octokit/request-error": "^6.1.5",
    "@octokit/rest": "^21.0.2",
    "@octokit/auth-token": "v5.1.1",
    "axios": "^1.7.9",
    "axios-retry": "^4.4.2",
    "human-interval": "^2.0.1",
    "stdio": "^2.1.3",
    "wildcard-match": "^5.1.4"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.5",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.14.1",
    "@vercel/ncc": "^0.38.3",
    "axios-logger": "^2.8.1",
    "eslint": "^8.57.1",
    "eslint-import-resolver-typescript": "^3.7.0",
    "eslint-plugin-github": "^5.1.4",
    "eslint-plugin-jest": "^28.10.0",
    "eslint-plugin-jsonc": "^2.18.2",
    "eslint-plugin-prettier": "^5.2.1",
    "jest": "^29.7.0",
    "make-coverage-badge": "^1.2.0",
    "prettier": "^3.4.2",
    "prettier-eslint": "^16.3.0",
    "ts-jest": "^29.2.5",
    "ts-jest-resolver": "^2.0.1",
    "typescript": "^5.7.2"
  }
}
